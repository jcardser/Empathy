@model IEnumerable<Empathy.Data.Entities.Appointment>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Agendar Cita</a>
</p>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Agendas médicas programadas</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                Fecha
                            </th>
                            <th>
                                Motivo
                            </th>
                            <th>
                                Profesional
                            </th>
                            <th>
                                Sede
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Reason)
                                </td>
                                <td>
                                    @if (item.AppointmentProfessionals != null && item.AppointmentProfessionals.Any())
                                    {
                                        <ul>
                                            @foreach (var appointmentProfessional in item.AppointmentProfessionals)
                                            {
                                                <li>@appointmentProfessional.Professional.NameProfessional - @appointmentProfessional.Professional.Specialty</li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <span>No se ha asignado un profesional</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Sede != null)
                                    {
                                        <span>@item.Sede.NameCampus</span>
                                    }
                                    else
                                    {
                                        <span>No se ha asignado una sede</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [5, 25, 50, 100, 200, -1],
                    [5, 25, 50, 100, 200, "Todos"]
                ]
            });
        });
    </script>
}