@model Empathy.Models.HealthConditionViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Condición medica</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditHealthCondition">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />8
            <input type="hidden" asp-for="AppointmentId" />
            <partial name="_HealthCondition" />

            <div class="form-group mt-2">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                <a asp-action="Details" asp-route-id="@Model.AppointmentId" class="btn btn-outline-success">Regresar</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}