@model Empathy.Data.Entities.HealthCondition

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar</h1>

<h3>¿Esta seguro de eliminar este registro?</h3>
<div>
    <partial name="_HealthConditionDetails" />

    <form asp-action="DeleteHealthCondition">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" /> |
        <a asp-action="Details" asp-route-itemid="@Model.Id" class="btn btn-outline-success">Regresar</a>
    </form>
</div>
