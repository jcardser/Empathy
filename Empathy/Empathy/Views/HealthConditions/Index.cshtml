@model IEnumerable<Empathy.Data.Entities.HealthCondition>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success">Registrar Condición de Salud</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Cédula
            </th>
            <th>
                Nombre
            </th>
            <th>
                Contacto Emerrgencia
            </th>
            <th>
                Teléfono Emergencia
            </th>
            <th>
                Alergias
            </th>
            <th>
                Medicamentos
            </th>
            <th>
                Cirugía
            </th>
            <th>
                Enfermedades Familiares
            </th>
            <th>
                Peso (Kg)
            </th>
            <th>
                Estatura (Cm)
            </th>
            <th>
                Fracturas
            </th>
            <th>
                Deportes
            </th>
            <th>
                Menstrual
            </th>
            <th>
                Método de planificación
            </th>
            <th>
                Fumador
            </th>
            <th>
                Alcohol
            </th>
            <th>
                Ocupación
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Identification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emergengy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneEmergengy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConditionHistory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medicine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surgery)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardiacHistory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fracture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Menstrual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MethodMenstrual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Smoke)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Beer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Occupation)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Detalles</a> |
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Borrar</a>
                    }
                </td>
        </tr>
}
    </tbody>
</table>
