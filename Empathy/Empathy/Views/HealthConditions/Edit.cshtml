@model Empathy.Data.Entities.HealthCondition

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Condición de Salud</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Identification" class="control-label"></label>
                <input asp-for="Identification" class="form-control" />
                <span asp-validation-for="Identification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameUser" class="control-label"></label>
                <input asp-for="NameUser" class="form-control" />
                <span asp-validation-for="NameUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Emergengy" class="control-label"></label>
                <input asp-for="Emergengy" class="form-control" />
                <span asp-validation-for="Emergengy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneEmergengy" class="control-label"></label>
                <input asp-for="PhoneEmergengy" class="form-control" />
                <span asp-validation-for="PhoneEmergengy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConditionHistory" class="control-label"></label>
                <input asp-for="ConditionHistory" class="form-control" />
                <span asp-validation-for="ConditionHistory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine" class="control-label"></label>
                <input asp-for="Medicine" class="form-control" />
                <span asp-validation-for="Medicine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surgery" class="control-label"></label>
                <input asp-for="Surgery" class="form-control" />
                <span asp-validation-for="Surgery" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardiacHistory" class="control-label"></label>
                <input asp-for="CardiacHistory" class="form-control" />
                <span asp-validation-for="CardiacHistory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fracture" class="control-label"></label>
                <input asp-for="Fracture" class="form-control" />
                <span asp-validation-for="Fracture" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Sport" /> @Html.DisplayNameFor(model => model.Sport)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Menstrual" class="control-label"></label>
                <input asp-for="Menstrual" class="form-control" />
                <span asp-validation-for="Menstrual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MethodMenstrual" class="control-label"></label>
                <input asp-for="MethodMenstrual" class="form-control" />
                <span asp-validation-for="MethodMenstrual" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Smoke" /> @Html.DisplayNameFor(model => model.Smoke)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Beer" /> @Html.DisplayNameFor(model => model.Beer)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Occupation" class="control-label"></label>
                <input asp-for="Occupation" class="form-control" />
                <span asp-validation-for="Occupation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
</div>

