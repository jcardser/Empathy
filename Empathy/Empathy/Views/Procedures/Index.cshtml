@model IEnumerable<Empathy.Data.Entities.Procedure>

@{
    ViewData["Title"] = "Index";
}

<h1>Procedimiento médico</h1>

<p>
    <a asp-action="Create">Crear procedimiento médico</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TypeProcedure)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TypeProcedure)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary"> Editar </a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info"> Detalle </a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"> Borrar </a>
            </td>
        </tr>
}
    </tbody>
</table>
