@model IEnumerable<Empathy.Data.Entities.Campus>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<h1> Sedes Médica </h1>
<p>
    <a asp-action="Create" class="btn btn-outline-primary">Crear Nueva Sede</a>
</p>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Sedes Médicas</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameCam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressCam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneCam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorsNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameCam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressCam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneCam)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoctorsNumber)
                </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary"> Editar </a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info"> Detalle </a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"> Borrar </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [25, 50, 100, 200, -1],
                    [25, 50, 100, 200, "Todos"]
                ]
            });
        });
    </script>
}