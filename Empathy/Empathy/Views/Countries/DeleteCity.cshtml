@model Empathy.Data.Entities.City

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar</h1>

<h3>¿Esta seguro de eliminar este registro?</h3>
<div>
    <partial name="_CityDetails" />

    <form asp-action="DeleteCity">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" /> |
        <a asp-action="DetailsState" asp-route-itemid="@Model.State.Id" class="btn btn-outline-success">Regresar</a>
    </form>
</div>
